@model List<t2210m.Models.ProductModel>
@{
    //var ls = ViewData["users"];
    var ls = ViewBag.users;
}
<div class="controller">
    <h1>Danh sách sản phẩm (số lượng : @Model.Count)</h1>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Product's name</th>
                <th>Describe</th>
                <th>Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (t2210m.Models.ProductModel item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.NameProduct</td>
                    <td>@item.Describe</td>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                </tr>
            }
        </tbody>
    </table>
</div>
